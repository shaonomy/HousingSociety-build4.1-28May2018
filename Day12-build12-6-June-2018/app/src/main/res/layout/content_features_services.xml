<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/features"
        android:layout_marginBottom="20dp">
        <!-- A CardView that contains a TextView -->


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/card_view"
            card_view:cardElevation="7dp"
            card_view:contentPaddingTop="7dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/info_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@mipmap/aboutus"
                    android:background="@color/cardview_shadow_start_color"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/info_text"
                    android:textColor="@color/black"
                    android:text="CHECK"/>
            </GridLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/card_view1"
            card_view:cardElevation="7dp"
            card_view:contentPaddingTop="7dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/info_image1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@mipmap/aboutus"
                    android:background="@color/cardview_shadow_start_color"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/info_text1"
                    android:textColor="@color/black"
                    android:text="CHECK"/>
            </GridLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/card_view2"
            card_view:cardElevation="7dp"
            card_view:contentPaddingTop="7dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/info_image2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@mipmap/aboutus"
                    android:background="@color/cardview_shadow_start_color"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/info_text2"
                    android:textColor="@color/black"
                    android:text="CHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECK"/>
            </GridLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/card_view3"
            card_view:cardElevation="7dp"
            card_view:contentPaddingTop="7dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/info_image3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@mipmap/aboutus"
                    android:background="@color/cardview_shadow_start_color"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/info_text3"
                    android:textColor="@color/black"
                    android:text=""/>
            </GridLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/card_view4"
            card_view:cardElevation="7dp"
            card_view:contentPaddingTop="7dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/info_image4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@mipmap/aboutus"
                    android:background="@color/cardview_shadow_start_color"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/info_text4"
                    android:textColor="@color/black"
                    android:text="CHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECKCHECK"/>
            </GridLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>