<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Payment_Details"

    tools:showIn="@layout/app_bar_payment__details">

    <TextView
        android:id="@+id/monthtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monthly_Payment"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/monthdetails"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/monthtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/monthstatus"
        android:layout_below="@+id/monthdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maintenace Status "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/status"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/monthstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>